<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/x2"
        tools:context=".MainActivity">

    <!-- Profile Section -->
    <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/profileSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="14sp"
            android:textColor="#808080"
            app:layout_constraintTop_toBottomOf="@id/profileName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- App Title -->
    <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlanPerfect"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/profileSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <!-- Date and Time -->
    <TextView
            android:id="@+id/dateTimeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday, December 12, 2024 11:15 AM"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/appTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Welcome Message -->
    <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome! Choose an option below to get started."
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/dateTimeDisplay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <!-- Motivational Quote -->
    <TextView
            android:id="@+id/motivationalQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“The secret of getting ahead is getting started.”"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Task List Section -->
    <TextView
            android:id="@+id/taskListLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Tasks"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/motivationalQuote"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/taskRecyclerView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="#F0F0F0"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/taskListLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Quick Add Task Button -->
    <Button
            android:id="@+id/btnQuickAddTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Add Task"
            app:layout_constraintTop_toBottomOf="@id/taskRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <!-- Today's Progress Section -->
    <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Progress"
            app:layout_constraintTop_toBottomOf="@id/btnQuickAddTask"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    <ProgressBar
            android:id="@+id/dailyProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progress="40"
            android:max="100"
            app:layout_constraintTop_toBottomOf="@id/progressText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    <!-- Footer Navigation -->
    <LinearLayout
            android:id="@+id/footerNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/dailyProgress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

        <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings" />

        <Button
                android:id="@+id/btnHelp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help" />

        <Button
                android:id="@+id/btnAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About" />
    </LinearLayout>

    <!-- ImageViews -->
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="41dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/icons8_calendar_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" />

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="39dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/icons8_plus_60"
            app:layout_constraintTop_toBottomOf="@id/taskRecyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="35dp"
            android:layout_height="33dp"
            app:srcCompat="@drawable/icons8_favorites_50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageView"
            android:layout_marginEnd="8dp" />

    <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icons8_user_64"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
