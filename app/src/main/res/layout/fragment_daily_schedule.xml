<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="@drawable/gradient_animation">

    <!-- Title -->
    <TextView
            android:id="@+id/daily_schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_schedule_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/mango"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />
    <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_label"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/sky"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />


    <!-- RecyclerView for Tasks -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/daily_schedule_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:clipToPadding="false"
            android:paddingBottom="8dp" />

    <!-- Button to Schedule Tasks -->
    <Button
            android:id="@+id/schedule_task_button"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/schedule_task_button"
            android:textStyle="bold"
            android:textColor="@color/midnight"
            android:backgroundTint="@color/jade"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

</LinearLayout>
